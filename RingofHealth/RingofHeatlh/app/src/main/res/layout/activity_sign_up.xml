<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codegears.ringofheatlh.SignUpActivity">

    <EditText
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblFullName"
        android:layout_alignBottom="@+id/lblFullName"
        android:layout_alignEnd="@+id/btn_Cont"
        android:layout_toEndOf="@+id/lblMobileNo"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="12sp" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:title="Step 01"
        app:theme="@style/MyCustomToolBarTheme"
        app:title="Profile Details"
        app:titleTextColor="@android:color/background_light"></android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/btn_Cont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="14dp"
        android:text="Continue" />

    <TextView
        android:id="@+id/lblFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar2"
        android:layout_marginStart="22dp"
        android:layout_marginTop="20dp"
        android:text="Full Name"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/lblDoB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtDoB"
        android:layout_alignBottom="@+id/txtDoB"
        android:layout_alignStart="@+id/lblFullName"
        android:text="Date of Birth"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/lblAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lblDoB"
        android:layout_below="@+id/lblDoB"
        android:layout_marginTop="22dp"
        android:text="Address"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/lblGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lblAddress"
        android:layout_below="@+id/lblAddress"
        android:layout_marginTop="24dp"
        android:text="Gender"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/lblMobileNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtMobNo"
        android:layout_alignStart="@+id/lblGender"
        android:text="Mobile Number"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/lblEmergencyOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Contact 1"
        android:textSize="12sp"
        android:layout_below="@+id/lblMobileNo"
        android:layout_alignStart="@+id/lblMobileNo"
        android:layout_marginTop="12dp"
        android:layout_alignEnd="@+id/lblDoB" />

    <EditText
        android:id="@+id/txtDoB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtName"
        android:layout_below="@+id/txtName"
        android:ems="10"
        android:inputType="date"
        android:textSize="12sp"
        android:layout_alignEnd="@+id/txtName" />

    <EditText
        android:id="@+id/txtAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblAddress"
        android:layout_alignBottom="@+id/lblAddress"
        android:layout_alignEnd="@+id/txtDoB"
        android:layout_alignStart="@+id/txtDoB"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/txtGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtAddress"
        android:layout_below="@+id/txtAddress"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="12sp"
        android:layout_alignEnd="@+id/txtAddress" />

    <EditText
        android:id="@+id/txtMobNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtGender"
        android:layout_below="@+id/txtGender"
        android:layout_toEndOf="@+id/lblMobileNo"
        android:ems="10"
        android:inputType="number"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/txtEmgNameOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtMobNo"
        android:layout_alignTop="@+id/lblEmergencyOne"
        android:layout_toEndOf="@+id/lblMobileNo"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/txtEmgNumOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtEmgNameOne"
        android:layout_alignStart="@+id/txtEmgNameOne"
        android:layout_below="@+id/txtEmgNameOne"
        android:ems="10"
        android:hint="Number"
        android:inputType="number"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Contact 2"
        android:textSize="12sp"
        android:layout_alignBaseline="@+id/txtEmgNameTwo"
        android:layout_alignBottom="@+id/txtEmgNameTwo"
        android:layout_alignStart="@+id/lblEmergencyOne"
        android:layout_alignEnd="@+id/lblEmergencyOne" />

    <EditText
        android:id="@+id/txtEmgNameTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textSize="12sp"
        android:layout_below="@+id/txtEmgNumOne"
        android:layout_alignStart="@+id/txtEmgNumOne"
        android:layout_marginTop="14dp"
        android:layout_alignEnd="@+id/txtEmgNumOne" />

    <EditText
        android:id="@+id/txtEmgNumTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtEmgNameTwo"
        android:layout_alignStart="@+id/txtEmgNameTwo"
        android:layout_below="@+id/txtEmgNameTwo"
        android:ems="10"
        android:hint="Number"
        android:inputType="number"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView29"
        android:layout_below="@+id/txtEmgNumTwo"
        android:layout_marginTop="12dp"
        android:text="Emergency Contact 3"
        android:textSize="12sp"
        android:layout_alignEnd="@+id/textView29" />

    <EditText
        android:id="@+id/txtEmgNameThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtEmgNumTwo"
        android:layout_alignStart="@+id/txtEmgNumTwo"
        android:layout_alignTop="@+id/textView30"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/txtEmgNumThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtEmgNameThree"
        android:layout_alignStart="@+id/txtEmgNameThree"
        android:layout_below="@+id/txtEmgNameThree"
        android:ems="10"
        android:hint="Number"
        android:inputType="number"
        android:textSize="12sp" />


</RelativeLayout>
