<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codegears.ringofheatlh.SignUp2Activity">

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDocId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:text="Submit" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:title="Step 01"
        app:theme="@style/MyCustomToolBarTheme"
        app:title="SignUp Information"
        app:titleTextColor="@android:color/background_light"></android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/lblUsrName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar2"
        android:layout_marginStart="34dp"
        android:layout_marginTop="48dp"
        android:text="Username" />

    <EditText
        android:id="@+id/txtUsrName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar2"
        android:layout_marginStart="36dp"
        android:layout_marginTop="33dp"
        android:layout_toEndOf="@+id/lblUsrName"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/lblPWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lblUsrName"
        android:layout_below="@+id/txtUsrName"
        android:layout_marginTop="31dp"
        android:text="Pasword" />

    <EditText
        android:id="@+id/txtPWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtUsrName"
        android:layout_below="@+id/txtUsrName"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/lblDocId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lblPWord"
        android:layout_below="@+id/txtPWord"
        android:layout_marginTop="24dp"
        android:text="Doctor ID" />

    <EditText
        android:id="@+id/txtDocId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtPWord"
        android:layout_below="@+id/txtPWord"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:inputType="textPersonName" />


</RelativeLayout>
